generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  categoria   String
  precio      Float
  cantidad    Int?
  descripcion String?
  // Nuevo campo para la URL de la imagen
  imagen_url  String?
  creadoEn    DateTime @default(now())
}
